/* 渐变背景,旋转角度45*/
.spin-1{
    padding: 0px 6rpx 0px 6rpx;
    background-image: linear-gradient(
        -45deg,
        rgba(255,88,0,1) 25%,
        #eee 25%,#eee 50%
        ,rgba(255,88,0,1) 50%,
        rgba(255,88,0,1) 75%,
        #eee 75%,#eee
    );
    background-size: 160rpx 160rpx;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: an-flow 20s linear infinite;
}

.spin-2{
    padding: 0px 6rpx 0px 6rpx;
    background-image: linear-gradient(
        -45deg,
        rgba(255,88,0,1) 25%,
        #eee 25%,#eee 50%
        ,rgba(255,88,0,1) 50%,
        rgba(255,88,0,1) 75%,
        #eee 75%,#eee
    );
    background-size: 160rpx 160rpx;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: an-flow-alt 20s linear infinite;
}

@keyframes an-flow {
    0% { background-position: 0%; }
    100% { background-position: 95%; }
}

@keyframes an-flow-alt {
    0% { background-position: 95%; }
    100% { background-position: 0%; }
}

