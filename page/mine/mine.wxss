.box-coin{
    text-align:right;
    flex:1;
    color: #555;
    font-weight: bold;
}

.coin{
    margin-right: 6rpx;
    margin-left: 8rpx;
    width:52rpx;
    height:52rpx;
    border-radius: 50%;
}

.an-coin{
    animation-name: coin-k;
    animation-duration: 3s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;

    animation-fill-mode: forwards;
}

@keyframes coin-r{
    50%{
        transform: rotateX(360deg)
    }
}

@keyframes coin-k{
    98%{
        box-shadow: 0px 0px 1px 1px #fff;
        opacity: 1;
    }
    99%{
        box-shadow: 0px 0px 5px 5px #eee;
        opacity: 0.9;
    }
    100%{
        box-shadow: 0px 0px 1px 1px #fff;
        opacity: 1;
    }
}

.avatar{
    margin-right: 5px;
    width:100rpx;
    height:100rpx;
    border-radius:50%;
}

.box-top{
    border-top: 1px #ccc solid;
    border-bottom: 1px #ccc solid;
    padding-top: 8rpx;
    padding-bottom: 8rpx;
    height:120rpx;
}

.level{
    border: 1px #eee solid; 
    box-shadow: 0px 0px 1px 1px #fff;
    border-radius: 36px;
}

@keyframes breath{
    5%{
        top:5%;
        box-shadow: 0px 0px 50px 50px #bbb;
        opcity:0.5;
    }
    25%{
        top:10%;
        opcity:0.8;
        box-shadow: 0px 0px 100x 100px #bbb;
    }
    50%{
        top:10%;
        left:50%;
        opcity:0.6;
        box-shadow: 0px 0px 150x 150px #bbb;
    }
    85%{
        top:10%;
        opcity:0.2;
        box-shadow: 0px 0px 200x 200px red;
    }
    99%{
        top:20%;
        left:20%;
        opcity:0.1;
        box-shadow: 0px 0px 200x 200px red;
        background-color: #eee;
    }
}









