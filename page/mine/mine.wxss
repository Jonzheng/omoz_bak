}

.box-info{
    border-top: 1px #ccc solid;
    border-bottom: 1px #ccc solid;
    padding-top: 8rpx;
    padding-bottom: 8rpx;
    height:120rpx;
}

.box-pet{
    position: relative;
    background-color:#fff;
    border: 1px #ccc solid;
    height:800rpx;
    width:746rpx;
}

.an-fall{
    animation: fall-k 2s ease-in 0.2s 1;
    animation-fill-mode: forwards;
}

@keyframes fall-k{
    10%{}


    65%{transform:scaleX(1)}
    66%{top:720rpx; left:480rpx;transform:scaleX(1.1)}
    67%{transform:scaleX(1)}


    100%{top:720rpx;left:485rpx;}
}

@keyframes run{

    29%{transform:scaleX(1);}
    30%{
        top:695rpx;
        transform:scaleX(1.1);
    }
    31%{transform:scaleX(1);}

    49%{ transform:scaleY(1);}
    50%{
        left:495rpx;
        transform:scaleY(1.1);
    }
    51%{transform:scaleY(1);}

    100%{
        left:20rpx;
    }
}


.an-run{
    animation-name: run;
    animation-duration: 4s;
    animation-timing-function: linear;
    animation-delay: 0s;
    animation-iteration-count: 10;
    animation-direction: normal;

    animation-fill-mode: forwards;
    /*animation-play-state: paused;*/
}
.pre-ball{
    position: absolute;
    top:0rpx;
    left:50%;

    opacity: 0.8;

    width:80rpx;
    height:80rpx;
    border-radius:50%;
}


.ball{
    position: absolute;
    width:80rpx;
    height:80rpx;
    border-radius:50%;
}

.an-spin{
    animation: spin-k 3s;
}

.an-wobble{
    animation: wobble-k 2s;
}

@keyframes wobble-k{
    0%, 24%, 54%, 74%, 86%, 96%, 100% {
        transform: scaleX(1.0);
    }
    25%, 55%, 75%, 87%, 97% {
        transform: scaleX(1.02) scaleY(0.95);
    }
    30%, 60%, 80% {
        transform: scaleX(0.96) scaleY(1.04);
    }
    75%, 98% {
        transform: scaleX(1.01);
    }
    99%{
        transform: scaleX(1.04);
    }

}
@keyframes spin-k {
   0% { -webkit-transform: rotate(-180deg); }  
   100% { -webkit-transform: rotate(360deg); }  
}  

.pet{
    position: absolute;
    top:0rpx;
    left:0rpx;
    
    opacity: 0.6;
    border: 2px solid blanchedalmond;
    box-shadow: 0px 0px 10px 10px #bbb;

    width:100rpx;
