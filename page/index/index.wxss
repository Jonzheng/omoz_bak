.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.my-ruby{
    display: ruby-text-container;
}

.hina{
    font-size: 0.8em;
    color:#666;

    display: inline-flex;
    position: relative;
    right:20rpx;
    bottom: 30rpx;
    width: 0rpx;
    height: 100rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.page-section-spacing{
  margin-top: 60rpx;
}
.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item{
  height: 300rpx;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 300rpx;
}


.loading-center {
    width: 100%;
    height: 100%;
    position: relative;
}

.loading-center-absolute {
    position: absolute;
    top: 50%;
    height: 50px;
    width: 150px;
    margin-top: -25px;
    margin-left: -75px;
}

.play-foo {
    width: 8px;
    height: 50px;
    margin-right: 5px;
    background-color: #FFF;
    float: left;
}

@keyframes scay{
    50%{transform: scaleY(0);}
}